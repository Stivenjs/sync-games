{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "SaveCloud",
  "version": "0.1.7",
  "identifier": "com.savecloud.app",
  "build": {
    "beforeDevCommand": "bun run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "bun run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "SaveCloud",
        "width": 800,
        "height": 600
      }
    ],
    "security": {
      "csp": {
        "img-src": "'self' data: blob: https://cdn.cloudflare.steamstatic.com https://steamcdn-a.akamaihd.net"
      }
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "createUpdaterArtifacts": true,
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  },
  "plugins": {
    "updater": {
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDM2MzZEOUM0OTJEOTc1NDUKUldSRmRkbVN4TmsyTnJEQ2NOYUZVZzRyajNFbWo3eWdmSllJcCtxb0RxcE1MMXFIbFZqTzNYdEwK",
      "endpoints": [
        "https://github.com/Stivenjs/savecloud/releases/latest/download/latest.json"
      ]
    }
  }
}
